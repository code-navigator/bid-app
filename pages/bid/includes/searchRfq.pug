v-container.mt-0.pt-0(fluid)
  v-row
    v-col(
      cols="12"
      style="padding: 0px;"
    )
      v-system-bar.d-flex.justify-space-around(
        color="black"
        window
        dark
        style="padding: 0px;"
      )
        v-btn(
          text
          small
          color="search"
        ) Add
        v-btn(
          text
          small
          color="search"
        ) Remove
  v-row.mt-2(no-gutters)
    v-col(cols="12")
      v-text-field(
        clearable
        dense
        full-width
        outlined
        hide-details="auto"
        prepend-inner-icon="mdi-magnify"
        single-line
        v-model="search"
        @input="handleSearch"
      )
      v-treeview(
        ref="tree"
        activatable
        dense
        :items="items"
        :search="search"
        selectable
        selection-type="leaf"
      )
